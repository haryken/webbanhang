<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="section-title">
      <h3 class="title">Item Information</h3>
    </div>
    <div class="row">
      <form class="" action="/thukho" method="post">
        <div class="col-md-6">
          <!-- Billing Details -->
          <div class="billing-details">
            <div class="form-group">
              <input class="input" type="text" name="name" placeholder="Name" value="<%=product.name%>" required="">
            </div>
            <div class="form-group">
              <select class="input" name="company">
                <option value="<%=product.company%>">Company <%=product.company%></option>
                <option value="samsung">samsung</option>
                <option value="sony">sony</option>
                <option value="LG">LG</option>
              </select>
            </div>
            <div class="form-group">
              <select class="input" name="discount">
                <option value="<%=product.discount%>">Discount <%=product.discount%></option>
                <%for(i=0;i<=35;i++){
                  %>
                    <option value="<%=i%>%"><%=i%>%</option>
                  <%
                }
                %>
              </select>
            </div>
            <div class="form-group">
                <input name="picture" type="file" class="custom-file-input input" id="customFile" accept="image/gif, image/jpeg, image/png, image/bmp" placeholder="Picture" value="12">
            </div>
            <div class="form-group">
              <input class="input" type="number" name="price" placeholder="Price" value="<%=product.price%>" min="1000" required="">
            </div>
            <div class="form-group">
              <input class="input" type="text" name="color" placeholder="Color" value="<%=product.color%>" required="">
            </div>
          </div>
          <!-- /Billing Details -->
        </div>
        <div class="col-md-6">
          <!-- Billing Details -->
          <div class="billing-details">
            <div class="form-group">
              <textarea class="" name="info" rows="7" cols="75" placeholder="Description" required=""><%=product.info%></textarea>
            </div>
            <div class="form-group">
              <input class="input" type="text" name="size" placeholder="Size" value="<%=product.size%>" required="">
            </div>
            <div class="form-group">
              <select class="input" name="state">
                <option value="<%=product.state%>">State <%=product.state%></option>
                <option value="true">Display</option>
                <option value="false">None</option>
              </select>
            </div>
            <div class="form-group">
              <select class="input" name="type">
                <option value="<%=product.type%>">Type <%=product.type%></option>
                <option value="accessories">Accessory</option>
                <option value="phones">Smartphone</option>
                <option value="cameras">Camera</option>
                <option value="laptops">Laptop</option>
              </select>
            </div>
          </div>
          <!-- /Billing Details -->
        </div>
          <input class="input" type="hidden" name="id" placeholder="Id" value="<%=product.id%>">
          <input type="hidden" name="pictureO" value="<%=product.picture%>">
        <button type="submit" name="submit" value="save" class="primary-btn order-submit">Save</button>
      </form>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function() {
        var fileName = "ken.jpg";
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
