<div class="section">
  <!-- container -->
  <%for(i=0;i<length;i++){
    cost +=products[i].price*products[i].amount;
  }
    %>
  <div class="container">
    <!-- row -->
    <div class="row">
      <form class="" action="/thukho" method="post">
        <div class="col-md-7">
          <!-- Billing Details -->
          <div class="billing-details">
            <div class="section-title">
              <h3 class="title">Supplier Information</h3>
            </div>
            <div class="form-group">
              <input class="input" type="text" name="name" placeholder="Name" value="<%=products[0].company%>" required="">
            </div>
            <div class="form-group">
              <input class="input" type="date" name="date" placeholder="Date" required="">
            </div>
          </div>
          <input type="hidden" name="cost" value="<%=cost%>">
          <input type="hidden" name="company" value="<%=products[0].company%>">
          <!-- /Billing Details -->

          <button type="submit" name="submit" value="finish" class="primary-btn order-submit">Place order</button>
        </div>
      <!-- Order Details -->
      <div class="col-md-5 order-details">
        <div class="section-title text-center">
          <h3 class="title">Order</h3>
        </div>
        <div class="order-summary">
          <div class="order-col">
            <div><strong>PRODUCT</strong></div>
            <div><strong>TOTAL</strong></div>
          </div>
          <div class="order-products">
          <%for(i=0;i<length;i++){
            %>
            <div class="order-col">
              <div><%=products[i].amount%>x <%=products[i].name%></div>
              <div><%=new Intl.NumberFormat().format(products[i].price)%> VNĐ</div>
            </div>
            <%
          }
          %>
          </div>
          <div class="order-col">
            <div>Shiping</div>
            <div><strong>FREE</strong></div>
          </div>
          <div class="order-col">
            <div><strong>TOTAL</strong></div>
            <div><strong class=""><%=new Intl.NumberFormat().format(cost)%> VNĐ</strong></div>
          </div>
        </div>
      </div>
      <!-- /Order Details -->
      </form>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
