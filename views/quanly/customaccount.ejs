<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="section-title">
      <h3 class="title"><%=account.username%>'s Information</h3>
    </div>
    <div class="row">
      <form class="" action="/quanly" method="post">
        <div class="col-md-6">
          <!-- Billing Details -->
          <div class="billing-details">
            <div class="form-group">
              <input class="input" type="text" name="name" placeholder="Name" value="<%=account.name%>" required="">
            </div>
            <div class="form-group">
              <input class="input" type="text" name="mail" placeholder="Email" value="<%=account.mail%>" required="">
            </div>
            <div class="form-group">
              <input class="input" type="text" name="phone" placeholder="Phone" value="<%=account.phone%>" required="">
            </div>
          </div>
          <!-- /Billing Details -->
        </div>
        <div class="col-md-6">
          <!-- Billing Details -->
          <div class="form-group">
            <input class="input" type="password" name="pass" placeholder="Password">
          </div>
          <div class="billing-details">
            <div class="form-group">
              <select class="input" name="state" required="">
                <option value="<%=account.state%>">State</option>
                <option value="true">Enable</option>
                <option value="false">disable</option>
              </select>
            </div>
            <div class="form-group">
              <select class="input" name="vaitro" required="">
                <option value="<%=account.vaitro%>">Role</option>
                <option value="1">Saler</option>
                <option value="2">Warehouse manager</option>
                <option value="3">Admin</option>
                <option value="4">Accountant</option>
              </select>
            </div>
          </div>
          <!-- /Billing Details -->
        </div>
        <input type="hidden" name="password" value="<%=account.pass%>">
        <input type="hidden" name="username" value="<%=account.username%>">
        <button type="submit" name="submit" value="save" class="primary-btn order-submit">Save</button>
      </form>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
